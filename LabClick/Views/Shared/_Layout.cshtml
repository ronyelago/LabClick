<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LabClick // O Seu laboratório em um click</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/DataTable/css/jquery.dataTables.css" rel="stylesheet" />
    <script src="~/Scripts/DataTable/jquery.dataTables.js"></script>
</head>
<body style="background-image: url('/Content/styles/images/bg_cadastro.jpg'); background-repeat: no-repeat;background-position: top center; background-size: cover">
    <div class="navbar navbar-default navbar-fixed-top">
        @if (Session["Id"] != null)
        {
            <input type="button" class="btn btn-success" value="Sair" onclick="location.href='@Url.Action("Index","Login")'"
                   style="position: absolute; right: 320px; top: 5px"/>
        }
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#">
                    <img src="~/Content/styles/images/logo-labclick2.png" class="navbar-brand" style="width:7%;position:absolute;">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                @if (User.IsInRole("Clinica"))
                {
                    <ul style="padding-left: 5%;" class="nav navbar-nav">
                        <li>@Html.ActionLink("Exames", "Index", "Exame")</li>
                        <li>@Html.ActionLink("Pacientes", "Index", "Paciente")</li>
                    </ul>}
                @if (User.IsInRole("Laboratorio"))
                {
                    <ul style="padding-left: 5%;" class="nav navbar-nav">
                        <li>@Html.ActionLink("Clinicas", "Index", "Clinica")</li>
                        <li>@Html.ActionLink("Pacientes", "IndexLab", "Paciente")</li>
                    </ul>
                }
                else
                {

                }
            </div>
        </div>
    </div>

    <div class="container body-content">
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        @RenderBody()
        <hr />

    </div>
</body>
</html>