@model List<LabClick.ViewModel.TesteViewModel>

<style type="text/css">
    th {
        background-color: transparent;
        color: grey;
    }

    #exame {
        color: #1f5c59;
        font-weight: 700;
    }

    td {
        color: #1f5c59;
    }
</style>

<div>
    <br /><br />
    <div id="divPacientes">
        @{Html.RenderPartial("TestesPartial", Model);}
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {

            $("#tbTestes").DataTable({
                language: {

                    searchPlaceholder: "Paciente, Data, Status",
                    "sEmptyTable": "Nenhum teste encontrado",
                    "sInfo": "Exibindo de _START_ até _END_ de _TOTAL_ testes",
                    "sInfoEmpty": "Exibindo 0 até 0 de 0 testes",
                    "sInfoFiltered": "(Filtrados de _MAX_ testes)",
                    "sInfoPostFix": "",
                    "sInfoThousands": ".",
                    "sLengthMenu": "_MENU_ Testes por página",
                    "sLoadingRecords": "Carregando...",
                    "sProcessing": "Processando...",
                    "sZeroRecords": "Nenhum teste encontrado",
                    "sSearch": "Pesquisar Teste por ",
                    "oPaginate": {
                        "sNext": "Próximo",
                        "sPrevious": "Anterior",
                        "sFirst": "Primeiro",
                        "sLast": "Último"
                    },

                    "oAria": {
                        "sSortAscending": ": Ordenar colunas de forma ascendente",
                        "sSortDescending": ": Ordenar colunas de forma descendente"

                    }
                }
            });
        });
