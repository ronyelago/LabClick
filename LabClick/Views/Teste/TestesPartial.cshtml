@model List<LabClick.ViewModel.TesteViewModel>
<div>
    <div class="row">
        <div class="col-lg-12">
            <p class="block-gradient text-center">Testes</p>
        </div>
    </div>
    <table class="table table-hover" style="width:100%; border: none" id="tbTestes">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Paciente</th>
                <th>Clínica</th>
                <th>Status</th>
                <th>Data</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teste in Model)
            {
            <tr>
                <td id="exame">@teste.Exame.Nome</td>
                <td>@teste.Paciente.Nome</td>
                <td>@teste.Clinica.Nome</td>
                <td>@teste.Status</td>
                <td>@teste.DataCadastro</td>
                @if (teste.LaudoOk)
                {
                    <td>
                        @Html.ActionLink("Ver PDF", "ViewPdf", "Teste", new { id = teste.Id }, new { target = "_blank", style = "text-decoration: none; color: white;", @class = "btn btn-success" })
                    </td>
                }
                else
                {

                    <td>
                        @Html.ActionLink("Analisar", "AnalisarTeste", "Teste", new { id = teste.Id }, new { style = "text-decoration: none; color: white;", @class = "btn btn-success" })
                    </td>
                }
            </tr>
            }
        </tbody>
    </table>
</div>